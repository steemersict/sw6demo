<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/master/src/Core/System/SystemConfig/Schema/config.xsd">
    <card>
        <title>Basic information</title>
        <title lang="de-DE">Stammdaten</title>

        <input-field>
            <name>shopName</name>
            <label>Name of the shop</label>
            <label lang="de-DE">Name des Shops</label>
            <placeholder>Name of the shop...</placeholder>
            <placeholder lang="de-DE">Name des Shops ...</placeholder>
        </input-field>

        <input-field>
            <name>email</name>
            <label>Shop owner email address</label>
            <label lang="de-DE">Shopbetreiber-E-Mail-Adresse</label>
            <placeholder>Enter email address...</placeholder>
            <placeholder lang="de-DE">E-Mail-Adresse eingeben ...</placeholder>
        </input-field>

        <input-field type="textarea">
            <name>address</name>
            <label>Address</label>
            <label lang="de-DE">Adresse</label>
            <placeholder>Enter address...</placeholder>
            <placeholder lang="de-DE">Adresse eingeben ...</placeholder>
        </input-field>

        <input-field type="textarea">
            <name>bankAccount</name>
            <label>Bank account </label>
            <label lang="de-DE">Bankverbindung</label>
            <placeholder>Enter bank account...</placeholder>
            <placeholder lang="de-DE">Bankverbindung eingeben ...</placeholder>
        </input-field>

        <input-field type="bool">
            <name>familyFriendly</name>
            <label>Family friendly shop</label>
            <label lang="de-DE">Familienfreundlicher Shop</label>
            <helpText>Sets meta tag "isFamilyFriendly" for search engines</helpText>
            <helpText lang="de-DE">Setzt den Metatag "isFamiliyFriendly" für Suchmaschinen</helpText>
        </input-field>

    </card>

    <card>
        <title>Shop pages</title>
        <title lang="de-DE">Shopseiten</title>

        <component name="sw-entity-single-select">
            <name>tosPage</name>
            <entity>cms_page</entity>
            <label>Shop page for terms of service</label>
            <label lang="de-DE">Shopseite für AGB</label>
        </component>

        <component name="sw-entity-single-select">
            <name>revocationPage</name>
            <entity>cms_page</entity>
            <label>Shop page for revocation notice</label>
            <label lang="de-DE">Shopseite für Widerrufsbelehrung</label>
        </component>

        <component name="sw-entity-single-select">
            <name>shippingPaymentInfoPage</name>
            <entity>cms_page</entity>
            <label>Shop page for shipping and payment info</label>
            <label lang="de-DE">Shopseite für Versand- und Zahlungsarten</label>
        </component>

        <component name="sw-entity-single-select">
            <name>privacyPage</name>
            <entity>cms_page</entity>
            <label>Shop page for privacy</label>
            <label lang="de-DE">Shopseite für Datenschutz</label>
        </component>
    </card>
</config>